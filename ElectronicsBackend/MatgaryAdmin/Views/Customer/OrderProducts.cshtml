@model IEnumerable<Matgary.DAL.OrderProduct>

@{
    ViewBag.Title = "OrderProducts";
}

<h2 class="alert alert-info">Products in this Order</h2>


<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Product</th>
            <th>Amount</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var op in Model)
        {
            <tr>
                <td>@op.DateTime.ToString("R")</td>
                <td>@op.Product.Title</td>
                <td>@op.Amount</td>
            </tr>
        }
    </tbody>
</table>



